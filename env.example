# Platform (Next.js) base URL. RGS calls this for bet/win/rollback/balance.
PLATFORM_URL=http://localhost:3000

# Port for the RGS HTTP server
RGS_PORT=8081

# Game name and provider sent to platform in transaction metadata
GAME_NAME=Hi/Lo
GAME_PROVIDER=Crypto LATAM

# Base URL of this RGS (used for iframe URLs returned to the platform). Must be reachable from the player's browser.
RGS_BASE_URL=http://localhost:8081

# Directory containing game bundles (e.g. lucky_star). Relative to process cwd.
# When running from repo root: rgs/games. When running from rgs/: games.
RGS_GAMES_DIR=rgs/games

# PostgreSQL connection string. App reads DATABASE_URL only (no YAML db config).
#
# Local dev (same DB as Next.js, sslmode=disable):
DATABASE_URL=postgres://latam_rgs_user:latam_rgs_pass@localhost:5433/latam_rgs?sslmode=disable
#
# Production (Render.com): set DATABASE_URL in Render env vars.
# Use Supabase connection pooler URL with ?sslmode=require (port 6543).
# Example (replace YOUR_PASSWORD with your Supabase DB password):
# DATABASE_URL=postgresql://postgres.yrjnvplaicudrbdogjpz:YOUR_PASSWORD@aws-1-eu-west-1.pooler.supabase.com:6543/postgres?sslmode=require

# Optional: local storage path and public base URL for imported game bundles.
# Used by the game importer CLI and (later) game launch:
# RGS_GAME_STORAGE_ROOT=/var/lib/latam_rgs/storage
# RGS_GAME_STORAGE_BASE_URL=https://cdn.our-domain.com

# Operator Transaction API (platform implements session-based debit/credit; required for in-game bets)
# When set, RGS calls this instead of JWT-based platform balance APIs.
OPERATOR_ENDPOINT=http://localhost:3000/api/operator/transaction
OPERATOR_SECRET=
